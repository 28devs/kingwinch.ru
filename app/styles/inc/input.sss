.form
  &-success
    display: none

  &--success
    ^&-content
      display: none
    
    .form-success
      display: block

  &--login
    width: 100%

.input_field
  margin-bottom: 20px

.simple_input, .input_field-error
  font-size: 15px
  height: 62px
  line-height: 62px
  background-color: #fff
  width: 100%
  box-sizing: border-box
  padding: 0 20px
  color: #333
  border: 0

  &--grey
    background-color: #e5e5e5
    border: 1px solid #c7c7c7

  &::placeholder
    color: #9f9f9f

.input_field
  &-error
    color: #d0021b
    display: none

  &--error
    .simple_input
      display: none

    ^&-error
      display: block

.simple_submit
  height: 62px
  margin-top: 31px
  border: 0
  border-radius: 1px
  background-color: #f9cf04
  font-size: 15px
  font-weight: bold
  text-align: center
  color: #333333
  letter-spacing: 0.1px
  width: 100%
  transition: all .3s
  cursor: pointer

  &:hover 
    background-color: #eec500